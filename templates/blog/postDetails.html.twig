{% extends 'base.html.twig' %}

{% block title %}IpGLobal - Post Info{% endblock %}

{% block body %}
    <style>
        .contenedor { margin: 1em auto; max-width: 1024px; width: 95%; font: 18px/1.5 sans-serif; }
        .contenedor code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="contenedor">
        <h1 class="text-center">Post Information</h1>

        <h2>Title</h2>
        <p>{{ postInfo.title }}</p>

        <h2>Body</h2>
        <p>{{ postInfo.body }}</p>

        <br><br>

        <h2>Author's file</h2>

        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Website</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ userInfo.name }}</td>
                    <td>{{ userInfo.username }}</td>
                    <td>{{ userInfo.email }}</td>
                    <td>{{ userInfo.phone }}</td>
                    <td>{{ userInfo.website }}</td>
                </tr>
            </tbody>
        </table>

        <br>
        <button onclick="location.href = '{{ path('app_blog') }}';">Back to Home</button>
    </div>
{% endblock %}
